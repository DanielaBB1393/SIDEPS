@model SIDEPS.Models.Diaconia_M

@{
    ViewBag.Title = "AgregarDiaconia";
}

<h2>Agregar Diaconia</h2>
@using (Html.BeginForm("Acciones", "Diaconia", FormMethod.Post, new { enctype = "multipart/form-data", @id = "frmDiaconia" }))
{

    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
  

    <div class="form-group">
        @Html.LabelFor(model => model.NOMDIAC04, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.NOMDIAC04, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NOMDIAC04, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.LUGDIAC04, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.LUGDIAC04, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.LUGDIAC04, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TELDIAC04, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.TELDIAC04, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TELDIAC04, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.CODCANT03, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.CODCANT03, new SelectList(Model.Cantones, "Codigo", "Descripcion"), new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.CODCANT03, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" id="btnAgregar"
                    name="submitButton" value="Agregar"
                    class="btn btn-primary" title="Agregar"
                    data-toggle="tooltip" data-container="body"
                    data-placement="right">
                Agregar
            </button>
        </div>
    </div>
</div>

}

<div>
    @Html.ActionLink("Volver a la lista", "listarDiaconias")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
