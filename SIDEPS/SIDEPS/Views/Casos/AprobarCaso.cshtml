@model SIDEPS.Models.AprobarCaso_M

@{
    ViewBag.Title = "Aprobar Caso";
}

<h2>Aprobar Caso</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Seleccione las ayudas aprobadas</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @for (int i = 0; i < Model.Ayudas.Count; i++)
        {
            <div class="form-group">
                @Html.Label(Model.Ayudas[i].Descripcion, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.CheckBoxFor(model => model.Ayudas[i].Aprobado, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Ayudas[i].Aprobado, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Ayudas[i].Codigo)
                </div>
            </div>
        }

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Aprobar" class="btn btn-success" />
            </div>
        </div>
    </div>
    @Html.HiddenFor(model => model.CodigoCaso)
}

<div>
    @Html.ActionLink("Regresar", "ValidarCaso")
</div>

