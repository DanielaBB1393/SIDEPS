@model SIDEPS.Models.GrupoFamiliar_M

@{
    ViewBag.Title = "Situacion Financiera";
}

<h2>Paso 5</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Situacion Financiera</h4>
        <hr />

        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <td>@Html.DisplayName("Cédula")</td>
                    <td>@Html.DisplayName("Nombre")</td>
                    <td>@Html.DisplayName("Edad")</td>
                    <td>@Html.DisplayName("Parentesco")</td>
                    <td>@Html.DisplayName("Estado Civil")</td>
                    <td>@Html.DisplayName("Escolaridad")</td>
                    <td>@Html.DisplayName("Ocupación")</td>
                    <td>@Html.DisplayName("Ingresos")</td>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i< Model.GrupoFamiliar.Count; i++)
                {
                    <tr>
                        <td>@Html.EditorFor(m => m.GrupoFamiliar[i].CEDFAML22, new { htmlAttributes = new { @class = "form-control" } })</td>
                        <td>@Html.EditorFor(m => m.GrupoFamiliar[i].NOMFAML22, new { htmlAttributes = new { @class = "form-control" } })</td>
                        <td>@Html.EditorFor(m => m.GrupoFamiliar[i].EDAFAML22, new { htmlAttributes = new { @class = "form-control" } })</td>
                        <td>@Html.EditorFor(m => m.GrupoFamiliar[i].CODPARE12, new { htmlAttributes = new { @class = "form-control" } })</td>
                        <td>@Html.EditorFor(m => m.GrupoFamiliar[i].CODESTC06, new { htmlAttributes = new { @class = "form-control" } })</td>
                        <td>@Html.EditorFor(m => m.GrupoFamiliar[i].CODNEDU09, new { htmlAttributes = new { @class = "form-control" } })</td>
                        <td>@Html.EditorFor(m => m.GrupoFamiliar[i].OACFAML22, new { htmlAttributes = new { @class = "form-control" } })</td>
                        <td>@Html.EditorFor(m => m.GrupoFamiliar[i].INGFAML22, new { htmlAttributes = new { @class = "form-control" } })</td>
                    </tr>
                }
            </tbody>
        </table>

        @Html.ValidationSummary(true, (ViewData["Mensaje"] ?? "").ToString(), new { @class = "text-danger" })
        <div class="form-group form-inline">
            <div class="col-md-1">
                <input type="submit" value="Agregar" class="btn btn-default" />
            </div>
            <div class="col-md-1">
                @Html.ActionLink("Siguiente", "Egresos", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
